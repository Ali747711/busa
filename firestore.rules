rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is a mentor
    // TO ADD NEW MENTORS: Add their email to the list below and deploy rules
    function isMentor() {
      return request.auth != null && 
        request.auth.token.email in [
          // Original mentors
          'aziz.karimov@busa.kr',
          'malika.uzbekova@busa.kr', 
          'bekzod.tashkentov@busa.kr',
          'admin@busa.kr',
          'alexnabiyev5@gmail.com',
          // New mentors
          'mentor1@busa.kr',
          'mentor2@busa.kr',
          'mentor3@busa.kr',
          'mentor4@busa.kr'
        ];
    }

    // Allow public read access to sessions and events
    match /sessions/{document} {
      allow read: if true;
      allow write: if isMentor();
      // Allow updating currentAttendees field for registration system
      allow update: if request.writeFields.size() == 1 &&
        'currentAttendees' in request.writeFields;
    }
    
    match /events/{document} {
      allow read: if true;
      allow write: if isMentor();
      // Allow updating currentAttendees field for registration system
      allow update: if request.writeFields.size() == 1 &&
        'currentAttendees' in request.writeFields;
    }
    
    // Allow public read access to mentors and content
    match /mentors/{document} {
      allow read: if true;
      allow write: if isMentor();
    }
    
    match /content/{document} {
      allow read: if true;
      allow write: if isMentor();
    }

    // Allow public read access to site configuration
    match /siteConfig/{document} {
      allow read: if true;
      allow write: if isMentor();
    }

    // Allow public read access to success stories
    match /success-stories/{document} {
      allow read: if true;
      allow write: if isMentor();
    }
    
    // Allow public registration creation and mentor management
    match /registrations/{document} {
      allow create: if true; // Allow anyone to create registrations
      allow read, update, delete: if isMentor();
    }

    // Photos collection (if enabled)
    match /photos/{photoId} {
      allow read: if true;
      allow write: if isMentor();
    }

    // Travel coordination collection
    match /travel/{travelId} {
      allow read: if isMentor();
      allow write: if isMentor();
    }

    // Forms collection
    match /forms/{formId} {
      allow read: if isMentor();
      allow write: if isMentor();
    }

    // Users collection for auth context
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, update: if isMentor(); // Only verified mentors can read and update user roles
    }

    // Deny all other requests by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}